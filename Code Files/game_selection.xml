<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC4FF3B">

    <Button
        android:id="@+id/gameBackButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Back"
        android:textSize="30sp" />

    <Button
        android:id="@+id/quizButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@id/GameSelectionTitle"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="170dp"
        android:text="Quiz"
        android:textSize="30sp" />


    <Button
        android:id="@+id/musicButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@id/quizButton"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="50dp"
        android:text="Music"
        android:textSize="30sp" />

    <Button
        android:id="@+id/gameStartButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@id/gameDescription"
        android:layout_centerVertical="true"
        android:layout_marginLeft="550dp"
        android:layout_marginTop="147dp"
        android:text="Start!"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/gameDescription"
        android:layout_width="450dp"
        android:layout_height="225dp"
        android:layout_below="@id/GameSelectionTitle"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@id/quizButton"
        android:background="@drawable/border"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/GameSelectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Choose a Game"
        android:textColor="#252424"
        android:textSize="50sp"
        android:textStyle="bold" />


</RelativeLayout>