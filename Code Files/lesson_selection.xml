<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/LessonSelectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Choose a Lesson"
        android:textColor="#252424"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/lessonBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Back"
        />

    <ListView
        android:id="@+id/lessonList"
        android:entries="@array/lessonsList"
        android:layout_width="250dp"
        android:layout_height="325dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:layout_below="@id/lessonBackButton"
        android:background="@drawable/border"
        />

    <TextView
        android:id="@+id/lessonDescription"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_below="@id/LessonSelectionTitle"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/lessonList"
        android:background="@drawable/border"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/lessonStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lessonDescription"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="85dp"
        android:layout_toRightOf="@id/lessonList"
        android:text="Start!" />


</RelativeLayout>