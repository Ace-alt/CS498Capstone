<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC4FF3B">

    <Button
        android:id="@+id/lessonBackButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Back"
        android:textSize="30sp" />

    <Button
        android:id="@+id/lessonStartButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lessonDescription"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/lessonList"
        android:text="Start!"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/lessonList"
        android:layout_width="351dp"
        android:layout_height="571dp"
        android:layout_below="@id/LessonSelectionTitle"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/border"
        android:entries="@array/lessonsList" />

    <TextView
        android:id="@+id/lessonDescription"
        android:layout_width="450dp"
        android:layout_height="225dp"
        android:layout_below="@id/LessonSelectionTitle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@id/lessonList"
        android:background="@drawable/border"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/LessonSelectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Choose a Lesson"
        android:textColor="#252424"
        android:textSize="50sp"
        android:textStyle="bold" />


</RelativeLayout>