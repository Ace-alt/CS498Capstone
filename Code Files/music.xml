<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC4FF3B">


    <TextView
        android:id="@+id/musicbox"
        android:layout_width="550dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/border"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/noteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="50dp"
        android:text="Note:"
        android:textColor="#000000"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/beatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noteTitle"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="25dp"
        android:text="Beat:"
        android:textColor="#000000"
        android:textSize="36sp" />

    <!--Solo Buttons -->
    <Button
        android:id="@+id/backtogameSelectButton2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Back"
        android:textSize="30sp" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/space8"
        android:layout_centerInParent="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/playButton"
        android:text="Clear"
        android:textSize="30sp" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/space8"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/beatTitle"
        android:text="Play!"
        android:onClick="playList"
        android:textSize="30sp" />



    <!--1st row of notes -->
    <RelativeLayout
        android:id="@+id/rowA"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/noteA"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="playSound"
            android:text="A"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp">
    <Button
            android:id="@+id/noteB"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="playSound"
            android:text="B"
            android:textSize="30sp" />

    </RelativeLayout>


<RelativeLayout
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/musicbox"
    android:layout_marginLeft="250dp"
    android:layout_marginTop="20dp">
<Button
            android:id="@+id/noteC"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="playSound"
            android:text="C"
            android:textSize="30sp" />
</RelativeLayout>



    <!--2nd row of notes -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp">

        <Button
            android:id="@+id/noteD"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="playSound"
            android:text="D"
            android:textSize="30sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="150dp">

    <Button
            android:id="@+id/noteE"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="playSound"
            android:text="E"
            android:textSize="30sp" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="250dp">
    <Button
            android:id="@+id/noteF"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="playSound"
            android:text="F"
            android:textSize="30sp" />
    </RelativeLayout>



    <!--3rd row notes -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="220dp">

        <Button
            android:id="@+id/noteG"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="playSound"
            android:text="G"
            android:textSize="30sp" />
    </RelativeLayout>



    <!--Beat Row -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/musicbox">

        <Button
            android:id="@+id/beat1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="1"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="75dp"
        android:layout_toRightOf="@id/musicbox">
    <Button
            android:id="@+id/beat2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="2"
            android:textSize="30sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        android:layout_toRightOf="@id/musicbox">

        <Button
            android:id="@+id/beat3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="3"
            android:textSize="30sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicbox"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="225dp"
        android:layout_toRightOf="@id/musicbox">

        <Button
            android:id="@+id/beat4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="4"
            android:textSize="30sp" />
    </RelativeLayout>




    <!--Drag Space Layouts -->

    <RelativeLayout
        android:id="@+id/space1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/musicbox"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/noteTitle"
        android:background="@drawable/border" />


    <RelativeLayout
        android:id="@+id/space2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/musicbox"
        android:layout_toRightOf="@id/space1"
        android:layout_marginTop="20dp"
        android:background="@drawable/border" />

    <RelativeLayout
        android:id="@+id/space3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/musicbox"
        android:layout_toRightOf="@id/space2"
        android:layout_marginTop="20dp"
        android:background="@drawable/border" />

    <RelativeLayout
        android:id="@+id/space4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/musicbox"
        android:layout_toRightOf="@id/space3"
        android:layout_marginTop="20dp"
        android:background="@drawable/border" />

    <RelativeLayout
        android:id="@+id/space5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/space1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/noteTitle"
        android:background="@drawable/border" />

    <RelativeLayout
        android:id="@+id/space6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/space2"
        android:layout_toRightOf="@id/space5"
        android:background="@drawable/border" />

    <RelativeLayout
        android:id="@+id/space7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/space3"
        android:layout_toRightOf="@id/space6"
        android:background="@drawable/border" />

    <RelativeLayout
        android:id="@+id/space8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/space4"
        android:layout_toRightOf="@id/space7"
        android:background="@drawable/border" />



</RelativeLayout>